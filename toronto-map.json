{
	"version": 8,
	"name": "osm",
	"metadata": {
		"maputnik:renderer": "mbgljs"
	},
	"glyphs": "https://geographyclub.github.io/toronto-map/assets/fonts/{fontstack}/{range}.pbf",
	"sprite": "https://geographyclub.github.io/toronto-map/assets/sprites/sprites-maki",
	"sources": {
		"osm": {
			"type": "vector",
			"url": "https://vector.openstreetmap.org/shortbread_v1/tilejson.json"
		}
	},
	"layers": [
		{
			"id": "background",
			"type": "background",
			"paint": {
				"background-color": "hsl(252, 18%, 27%)"
			}
		},
		{
			"source": "osm",
			"id": "land-natural",
			"type": "fill",
			"source-layer": "land",
			"filter": [ "in", "kind", "brownfield", "farmland", "farmyard", "greenfield", "greenhouse_horticulture", "orchard", "plant_nursery", "vineyard", "park", "village_green", "recreation_ground", "allotments", "garden", "miniature_golf", "playground", "golf_course", "forest", "grass", "grassland", "meadow", "wet_meadow", "heath", "scrub", "beach", "sand", "bog", "marsh", "string_bog", "swamp" ],
			"paint": {
			  "fill-color": "hsl(165, 30%, 36%)",
			  "fill-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 16, 0, 17, 1 ]
			},
			"minzoom": 16
		},
		{
			"source": "osm",
			"id": "water",
			"type": "fill",
			"source-layer": "water_polygons",
			"filter": [ "in", "kind", "water", "river", "reservoir", "basin", "dock" ],
			"paint": {
				"fill-color": "hsl(216, 44%, 26%)"
			}
		},
		{
			"source": "osm",
			"id": "waterway",
			"type": "line",
			"source-layer": "water_lines",
			"filter": [ "all", [ "in", "kind", "river" ], [ "!=", "tunnel", true ], [ "!=", "bridge", true ] ],
			"paint": {
				"line-color": "hsl(216, 44%, 26%)",
				"line-width": 1,
				"line-opacity": { "stops": [ [ 5, 0 ], [ 6, 1 ] ] }
			}
		},
		{
			"id": "ferry",
			"type": "line",
			"source": "osm",
			"source-layer": "ferries",
			"paint": {
			  "line-color": "hsl(200, 100%, 60%)",
			  "line-dasharray": [2, 2],
			  "line-width": 1
			}
		},	  
		{
			"source": "osm",
			"id": "airport-taxiway",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "taxiway" ],
			"paint": {
				"line-color": "hsl(233, 15%, 57%)",
				"line-width": { "stops": [ [ 13, 0 ], [ 14, 1 ], [ 15, 8 ], [ 16, 12 ], [ 18, 18 ], [ 20, 36 ] ] },
				"line-opacity": { "stops": [ [ 13, 0 ], [ 14, 1 ] ] }
			},
			"layout": {
				"line-join": "round"
			}
		},
		{
			"source": "osm",
			"id": "airport-area",
			"type": "fill",
			"source-layer": "street_polygons",
			"filter": [ "in", "kind", "runway", "taxiway" ],
			"paint": {
				"fill-color": "hsl(233, 15%, 57%)",
				"fill-opacity": { "stops": [ [ 11, 0 ], [ 12, 1 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "highway-service-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "in", "kind", "service" ], [ "!=", "bridge", true ], [ "!=", "tunnel", true ] ],
			"paint": {
				"line-color": "hsl(233, 15%, 47%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 40 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "butt"
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "highway-minor-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "unclassified", "residential", "living_street" ],
			"paint": {
				"line-color": "hsl(233, 15%, 47%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 3, 20, 102 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 14, 0, 15, 1 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 14
		},
		{
			"source": "osm",
			"id": "highway-major-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"paint": {
				"line-color": "hsl(233, 15%, 47%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 15, 5, 20, 162 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 11, 0, 12, 1 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 11
		},
		{
			"source": "osm",
			"id": "highway-service",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "in", "kind", "service" ], [ "!=", "bridge", true ], [ "!=", "tunnel", true ] ],
			"paint": {
				"line-color": "hsl(233, 15%, 57%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 30 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "highway-minor",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "unclassified", "residential", "living_street" ],
			"paint": {
				"line-color": "hsl(233, 15%, 57%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 92 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 14, 0, 15, 1 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 14
		},
		{
			"source": "osm",
			"id": "highway-major",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"paint": {
				"line-color": "hsl(233, 15%, 57%)",
				"line-width": [ "interpolate", [ "exponential", 2 ], [ "zoom" ], 10, 0, 20, 152 ],
				"line-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 11, 0, 12, 1 ]
			},
			"layout": {
				"line-join": "round",
				"line-cap": "round"
			},
			"minzoom": 11
		},
		{
			"source": "osm",
			"id": "railway-outline",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "in", "kind", "rail" ], [ "!=", "bridge", true ], [ "!=", "tunnel", true ] ],
			"paint": {
				"line-color": "hsl(233, 15%, 57%)",
				"line-width": { "stops": [ [ 8, 1 ], [ 13, 1 ], [ 15, 3 ], [ 16, 4 ], [ 18, 8 ], [ 19, 11 ], [ 20, 14 ] ] },
				"line-opacity": { "stops": [ [ 14, 0 ], [ 15, 1 ] ] }
			}
		},
		{
			"source": "osm",
			"id": "railway",
			"type": "line",
			"source-layer": "streets",
			"filter": [ "all", [ "in", "kind", "rail" ], [ "!=", "bridge", true ], [ "!=", "tunnel", true ] ],
			"paint": {
				"line-color": "hsl(0, 0%, 80%)",
				"line-width": { "stops": [ [ 8, 1 ], [ 13, 1 ], [ 15, 2 ], [ 16, 3 ], [ 18, 6 ], [ 19, 8 ], [ 20, 10 ] ] },
				"line-dasharray": [ 2, 2 ],
				"line-opacity": { "stops": [ [ 14, 0 ], [ 15, 1 ] ] }
			}
		},	  
		{
			"source": "osm",
			"id": "highway-name-minor",
			"type": "symbol",
			"source-layer": "street_labels",
			"filter": [ "in", "kind", "unclassified", "residential", "living_street" ],
			"layout": {
				"text-field": "{name}",
				"text-transform": "uppercase",
				"text-rotation-alignment": "map",
				"text-font": [ "montserrat-semibold" ],
				"text-letter-spacing": 0.2,
				"symbol-placement": "line",
				"symbol-spacing": 250,
				"text-anchor": "center",
				"text-size": [ "interpolate", [ "exponential", 1.5 ], [ "zoom" ], 10, 0, 20, 25 ]
			},
			"paint": {
				"text-color": "hsl(0, 0%, 20%)",
				"text-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ]
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "highway-name-major",
			"type": "symbol",
			"source-layer": "street_labels",
			"filter": [ "in", "kind", "motorway", "trunk", "primary", "secondary", "tertiary" ],
			"layout": {
				"text-field": "{name}",
				"text-transform": "uppercase",
				"text-rotation-alignment": "map",
				"text-font": [ "montserrat-semibold" ],
				"text-letter-spacing": 0.2,
				"symbol-placement": "line",
				"symbol-spacing": 250,
				"text-anchor": "center",
				"text-size": [ "interpolate", [ "exponential", 1.5 ], [ "zoom" ], 10, 0, 20, 30 ]
			},
			"paint": {
				"text-color": "hsl(0, 0%, 20%)",
				"text-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ]
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "poi-amenity",
			"type": "symbol",
			"source-layer": "pois",
			"filter": [ "all", [ "to-boolean", [ "get", "amenity" ] ], ["!=", ["get", "name"], null] ],
			"layout": {
				"icon-size": 0.5,
				"symbol-placement": "point",
				"icon-optional": true,
				"icon-image": ["match", ["get", "amenity"], "arts_centre", "art_gallery", "atm", "atm", "bank", "bank", "bar", "bar", "bench", "bench", "bicycle_rental", "bicycle_share", "biergarten", "beergarden", "cafe", "cafe", "car_rental", "car_rental", "car_sharing", "car_rental", "car_wash", "car_wash", "cinema", "cinema", "college", "college", "community_centre", "community", "dentist", "dentist", "doctors", "doctor", "dog_park", "dog_park", "drinking_water", "drinking_water", "embassy", "embassy", "fast_food", "fast_food", "fire_station", "fire_station", "fountain", "fountain", "grave_yard", "cemetery", "hospital", "hospital", "hunting_stand", "huntingstand", "library", "library", "marketplace", "marketplace", "nightclub", "nightclub", "nursing_home", "nursinghome", "pharmacy", "pharmacy", "place_of_worship", "place_of_worship", "playground", "playground", "police", "police", "post_box", "postbox", "post_office", "post", "prison", "prison", "pub", "beer", "recycling", "recycling", "restaurant", "restaurant", "school", "school", "shelter", "shelter", "telephone", "telephone", "theatre", "theatre", "toilets", "toilet", "townhall", "town_hall", "vending_machine", "vendingmachine", "veterinary", "veterinary", "waste_basket", "waste_basket", "unknown"],
				"text-font": [ "montserrat-semibold" ],
				"text-size": 10,
				"text-field": ["get", "name"],
				"text-max-width": 8,
				"text-line-height": 1,
				"icon-anchor": "bottom",
				"text-anchor": "top",
				"icon-allow-overlap": false,
				"text-allow-overlap": false,
				"icon-ignore-placement": false,
				"text-ignore-placement": false
			},
			"paint": {
				"icon-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ],
				"text-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 15, 0, 16, 1 ],
				"icon-color": "hsl(227, 89%, 90%)",
				"text-color": "hsl(227, 89%, 90%)"
			},
			"minzoom": 15
		},
		{
			"source": "osm",
			"id": "symbol-transit",
			"type": "symbol",
			"source-layer": "public_transport",
			"filter": [ "in", "kind", "bus_stop", "tram_stop", "light_rail" ],
			"layout": {
				"text-field": "{name}",
				"icon-size": 0.5,
				"symbol-placement": "point",
				"text-font": [ "montserrat-semibold" ],
				"text-size": 10,
				"icon-anchor": "bottom",
				"text-anchor": "top",
				"icon-image": "icon-bus",
				"icon-allow-overlap": false,
				"text-allow-overlap": false,
				"icon-ignore-placement": false,
				"text-ignore-placement": false
			},
			"paint": {
				"icon-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 14, 0, 15, 1 ],
				"text-opacity": [ "interpolate", [ "linear" ], [ "zoom" ], 14, 0, 15, 1 ],
				"icon-color": "hsl(310, 100%, 90%)",
				"text-color": "hsl(310, 100%, 90%)",
				"text-halo-color": "hsl(0, 0%, 20%)",
				"text-halo-width": 0,
				"text-halo-blur": 0
			},
			"minzoom": 14
		},
		{
			"source": "osm",
			"id": "symbol-transit-subway",
			"type": "symbol",
			"source-layer": "public_transport",
			"filter": [ "in", "kind", "station" ],
			"layout": {
